.show-html {
  .data.multiple.data-html.data-haml table:nth-child(2) {
    display: none;
  }
}
.show-haml {
  .data.multiple.data-html.data-haml table:nth-child(1) {
    display: none;
  }
}

.show-html.show-haml {
  .data.multiple.data-html.data-haml table {
    display: table;
  }
  .data.multiple.data-html.data-haml table:nth-child(1) {
    margin-bottom: 21px;
  }
}

