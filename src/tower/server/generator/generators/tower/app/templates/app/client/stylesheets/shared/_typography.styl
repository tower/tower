::selection
	background: $text-selection-color /* Safari */
::-moz-selection
	background: $text-selection-color /* Firefox */

h1, h2, h3, h4
  font-weight:  normal
  font-style:   normal
  line-height:  1
  font-family:  $title-font

h1
  text-transform: uppercase
  font-weight:    bold
  letter-spacing: 1
  font-size:      72px
  text-shadow:    rgba(255, 255, 255, .8) 0 1px 0

h2
  font-family:      $subtitle-font
  font-size:        24px
  code
    text-transform: none
    font-size:      28px

h3
  font-family:      $subtitle-font
  font-size:        24px
  code
    text-transform: none
    font-size:      21px

h4
  font-family:      $subtitle-font
  font-size:        18px
  text-transform:   uppercase
  text-align:       left
  code
    font-size:      16px
    text-transform: none

p, li
  font-weight:    normal
  font-style:     normal
  line-height:    normal
  font-family:    $body-font
  text-transform: none
  line-height:    1.5em
  text-align:     left
  margin:         0 0 13px 0
  font-size:      $body-font-size

p
  margin-bottom: $paragraph-gutter

a
  position:         relative
  color:            $text-color
  text-decoration:  none

img
  display: block
  margin: 0 auto
  position: relative